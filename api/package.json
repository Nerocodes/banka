{
  "name": "banka",
  "version": "1.0.0",
  "description": "a simple banking api",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel -d ./build ./src -s",
    "build": "npm run clean && npm run build-server",
    "start": "set NODE_ENV='PROD' && node ./build/index.js",
    "dev-start": "nodemon --exec babel-node ./src/index.js",
    "test": "set NODE_ENV='TEST' && npm run migrations && npm run seeders && nyc mocha --timeout=50000 --require @babel/register ./src/test/ --exit || true",
    "singleTest": "set NODE_ENV='TEST' && nyc mocha --timeout=20000 --require @babel/register ./src/test/account.test.js --exit || true",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "migrations": "babel-node ./src/database/migrations/createTables createAllTables",
    "seeders": "babel-node ./src/database/seeders/insertTableData insertAllTables"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nerocodes/banka.git"
  },
  "keywords": [
    "bank",
    "credit",
    "debit",
    "transaction"
  ],
  "author": "nerocodes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Nerocodes/banka/issues"
  },
  "homepage": "https://github.com/Nerocodes/banka#readme",
  "dependencies": {
    "@babel/runtime": "^7.4.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "mocha": "^6.1.3",
    "pg": "^7.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^14.0.0"
  }
}
